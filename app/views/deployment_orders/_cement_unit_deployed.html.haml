.row
  .col-md-3
    .mb-3
      = f.label :vehicle_name, {class:'form-label'}
      = f.text_field :vehicle_name, {class:'form-control', placeholder: 'Vehicle name'}
  .col-md-3
    .mb-3
      = f.label :quantity, {class:'form-label'}
      = f.text_field :quantity, {class:'form-control', placeholder: 'Quantity'}
  .col-md-3
    .mb-3.delete
      = link_to '#', class: 'remove_record' do
        %i.far.fa-times-circle
      = f.hidden_field :_destroy
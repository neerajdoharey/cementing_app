.row
  .col-md-12
    %table.table.table-bordered.table-sm.ongc_header
      %tbody
        %tr
          %td{:rowspan => "4", :width => "95"}
            = image_tag image_url('logo.png'), size: "95"
          %td{:rowspan => "4"} 
            %h2.ongc.text-center OIL AND NATURAL GAS CORPORATION LTD.
            %h4.text-center Cementing Services 
            %h4.text-center Ahmedabad Asset
          %td
            Issue No :
            03/ Date: 13.12.2017
        %tr
          %td
            Rev. No. :
            00/Date:00.00.0000
        %tr  
          %td
            Doc No. AMD/CMTG/QHSE/R 18
        %tr  
          %td
            Page No.: 271 Of 282
%h2.text-center DEPLOYMENT ORDER
%hr
%table.table.table-sm.dob.table-borderless
  %tbody
    %tr
      %td{:width => '33%'}
        %label.form-label.fw-bold Date of Duty :
        = @deployment_order.date_of_duty.strftime('%d-%m-%Y')
      %td{:width => '33%'}
        %label.form-label.fw-bold Rig :
        = @deployment_order.rig.rig_name
      %td{:width => '33%'}
        %label.form-label.fw-bold Well :
        = @deployment_order.well_name

%h1 List of Rigs
%hr
%table.table.table-hover.table-sm
	%thead
		%tr
			%th{:scope => "col"} Rig
			%th.text-end{:scope => "col"} Action
	%tbody
		- @rigs.each do |rig|
			%tr
				%td= rig.rig_name 
				%td.text-end
					= link_to rig_path(rig) , class: "btn btn-success btn-sm margin_5px" do
						%i.fas.fa-eye
					= link_to edit_rig_path(rig) , class: "btn btn-primary btn-sm margin_5px" do
						%i.far.fa-edit
					= link_to rig_path(rig) , method: :delete ,data: {confirm: "Are you sure"} , class: "btn btn-danger btn-sm margin_5px" do
						%i.far.fa-trash-alt
= will_paginate @rigs